<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_menu_black_24dp"/>
        <ImageView
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/main_toptext">
        </ImageView>
        <!--        android:id="@+id/search_bar"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:orientation="horizontal"-->
        <!--        android:layout_marginTop="200dp">-->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_searchbar"
            android:id="@+id/edt_Url"
            android:layout_centerVertical="true"
            android:hint="URL을 입력해주세요"
            android:layout_gravity="center_vertical">
        </EditText>
        <Button
            android:id="@+id/btn_search"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/edt_Url"
            android:layout_marginRight="10dp"
            android:background="#00ff0000"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@+id/edt_Url"
            android:layout_marginTop="100dp">

<!--            <TextView-->
<!--                android:id="@+id/recArticle2"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="여기다 통신된 데이터"-->
<!--                android:textSize="20dp"/>-->
        </RelativeLayout>
    </RelativeLayout>

    <include layout="@layout/menu_setting"/>
</androidx.drawerlayout.widget.DrawerLayout>